<div class="container py-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="mb-3">
        <a href="/idea" class="btn btn-outline-dark">Go Back</a>
      </div>

      <div class="card border-light">
        <div class="card-header bg-dark"><h1 class="h2 fw-bold text-light p-3 mb-0">Video Idea</h1></div>
        <div class="card-body bg-light p-4">
          <form action="/idea/create" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control form-control-lg" id="title" name="title" value="{{ title }}" autofocus>
            </div>
            <div class="mb-3">
              <label for="details" class="form-label">Details</label>
              <textarea class="form-control form-control-lg" rows="4" id="details" name="details">{{ details }}</textarea>
            </div>
            <button type="submit" class="btn btn-primary px-5">Submit</button>
            <button type="reset" class="btn btn-secondary px-3">Reset</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>