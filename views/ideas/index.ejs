<div class="container py-5">
  <div class="row">
    <div class="col-md-8 mx-auto">

      <%- include('../partials/msg.ejs') %> 

      <h1 class="fw-bold mb-4">Ideas</h1>

      <div class="mb-2 text-end">
        <a href="/ideas/create" class="btn btn-outline-dark">
          <i class="fa fa-plus"></i> Create
        </a>
      </div>
      <table class="table table-hover">
        <thead class="bg-dark text-light">
          <tr>
            <th scope="col" class="w-25">Title</th>
            <th scope="col" class="w-50">Details</th>
            <th scope="col" class="w-25">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (typeof ideas == 'object' && ideas.length > 0) { %> 
            <% ideas.forEach(idea => { %>
              <tr>
                <td><%= idea.title %> </td>
                <td><%= idea.details %></td>
                <td>
                  <a href="/ideas/edit/<%= idea._id %>" class="btn btn-secondary btn-sm"><i class="fa fa-pen"></i></a>

                  <form action="/ideas/delete/<%= idea._id %>?_method=DELETE" method="POST" class="d-inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                  </form>
                </td>
              </tr>
            <% }); %> 
          <% } else { %> 
            <tr>
              <td colspan="4">No video ideas created!</td>
            </tr>
          <% } %> 
        </tbody>
      </table>
    </div>
  </div>
</div>