<div class="container py-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="fw-bold mb-4">Ideas</h1>

      <div class="mb-2 text-end">
        <a href="/idea/create" class="btn btn-outline-dark">
          <i class="fa fa-plus"></i> Create
        </a>
      </div>
      <table class="table table-hover">
        <thead class="bg-dark text-light">
          <tr>
            <th scope="col" class="w-25">Title</th>
            <th scope="col" class="w-50">Details</th>
            <th scope="col" class="w-25">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each ideas}}
            <tr>
              <td>{{title}}</td>
              <td>{{details}}</td>
              <td>
                <a href="/idea/edit/{{ _id }}" class="btn btn-secondary btn-sm"><i class="fa fa-pen"></i> Edit</a>

                <form action="/idea/delete/{{ _id }}?_method=DELETE" method="POST" class="d-inline">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</button>
                </form>
              </td>
            </tr>

            {{else}}
            <tr>
              <td colspan="4">No video ideas created!</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>